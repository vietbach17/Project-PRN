<Window x:Class="ManagementHotel.RoomEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Room" Height="360" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Room Number" VerticalAlignment="Center"/>
        <TextBox x:Name="txtRoomNumber" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="1" Text="Floor" VerticalAlignment="Center"/>
        <TextBox x:Name="txtFloor" Grid.Row="1" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="2" Text="Room Type" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbRoomType" Grid.Row="2" Grid.Column="1" Margin="8,0,0,6" DisplayMemberPath="Name" SelectedValuePath="RoomTypeId"/>

        <TextBlock Grid.Row="3" Text="Status" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbStatus" Grid.Row="3" Grid.Column="1" Margin="8,0,0,6">
            <ComboBoxItem Content="Available"/>
            <ComboBoxItem Content="Occupied"/>
            <ComboBoxItem Content="Cleaning"/>
            <ComboBoxItem Content="Maintenance"/>
        </ComboBox>

        <TextBlock Grid.Row="4" Text="Price/Night" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPrice" Grid.Row="4" Grid.Column="1" Margin="8,0,0,6"/>

        <StackPanel Grid.Row="5" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="0,0,8,0" Click="Save_Click">Save</Button>
            <Button Width="90" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
