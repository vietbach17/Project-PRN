<Window x:Class="ManagementHotel.ServiceSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Services" Height="450" Width="620" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Choose extra services for this booking" FontSize="16" FontWeight="SemiBold"/>
        <DataGrid x:Name="dgServices" Grid.Row="1" Margin="0,12,0,12" AutoGenerateColumns="False" IsReadOnly="False" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Service" Binding="{Binding ServiceName}" IsReadOnly="True" Width="2*"/>
                <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="Price" Binding="{Binding UnitPrice, StringFormat={}{0:N0}}" IsReadOnly="True" Width="*"/>
                <DataGridTemplateColumn Header="Quantity" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <TextBox Text="{Binding Quantity, UpdateSourceTrigger=PropertyChanged}" HorizontalContentAlignment="Center" PreviewTextInput="Quantity_PreviewTextInput" DataObject.Pasting="Quantity_Pasting" TextChanged="Quantity_TextChanged" MaxLength="4"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:N0}}" IsReadOnly="True" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Center">
            <TextBlock Text="Grand total:" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,12,0"/>
            <TextBlock x:Name="txtTotal" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0,0,24,0"/>
            <Button Width="100" Margin="0,0,8,0" Click="Save_Click">Save</Button>
            <Button Width="100" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
