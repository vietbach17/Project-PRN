<Window x:Class="ManagementHotel.InvoicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Invoices" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button x:Name="btnRecalc" Width="110" Margin="0,0,8,0" Click="Recalculate_Click">Recalculate</Button>
            <Button x:Name="btnRefresh" Width="90" Click="Refresh_Click">Refresh</Button>
        </StackPanel>
        <DataGrid x:Name="dg" AutoGenerateColumns="False" IsReadOnly="True" Margin="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Invoice #" Binding="{Binding InvoiceId}" Width="*"/>
                <DataGridTextColumn Header="Booking #" Binding="{Binding BookingId}" Width="*"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="2*"/>
                <DataGridTextColumn Header="Room" Binding="{Binding SubtotalRoom, StringFormat={}{0:N0} ₫}" ElementStyle="{StaticResource RightAlignText}" Width="*"/>
                <DataGridTextColumn Header="Service" Binding="{Binding SubtotalService, StringFormat={}{0:N0} ₫}" ElementStyle="{StaticResource RightAlignText}" Width="*"/>
                <DataGridTextColumn Header="Tax" Binding="{Binding Tax, StringFormat={}{0:N0} ₫}" ElementStyle="{StaticResource RightAlignText}" Width="*"/>
                <DataGridTextColumn Header="Discount" Binding="{Binding Discount, StringFormat={}{0:N0} ₫}" ElementStyle="{StaticResource RightAlignText}" Width="*"/>
                <DataGridTextColumn Header="Total" Binding="{Binding Total, StringFormat={}{0:N0} ₫}" ElementStyle="{StaticResource RightAlignText}" Width="*"/>
                <DataGridTextColumn Header="Issued" Binding="{Binding IssuedAt, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
