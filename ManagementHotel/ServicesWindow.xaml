<Window x:Class="ManagementHotel.ServicesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Services" Height="440" Width="700" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Services" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock FontSize="12" Foreground="{StaticResource ForegroundDimBrush}" Text="Signed in as:"/>
                <TextBlock x:Name="txtCurrentUser" FontWeight="SemiBold" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>

        <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,16,0,12">
            <Button x:Name="btnAdd" Width="100" Click="Add_Click" Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;"/>
                    <TextBlock Text="Add" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnEdit" Width="100" Click="Edit_Click" Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;"/>
                    <TextBlock Text="Edit" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnDelete" Width="100" Click="Delete_Click" Margin="0,0,8,0">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;"/>
                    <TextBlock Text="Delete" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
            <Button x:Name="btnRefresh" Width="100" Click="Refresh_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;"/>
                    <TextBlock Text="Refresh" Margin="6,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>

        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
            <DataGrid x:Name="dg" AutoGenerateColumns="False" IsReadOnly="True" Margin="12" RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding ServiceId}" Width="*" ElementStyle="{StaticResource CenterAlignText}"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="2*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price, StringFormat={}{0:N0} â‚«}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Unit" Binding="{Binding Unit}" Width="*" ElementStyle="{StaticResource CenterAlignText}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>
