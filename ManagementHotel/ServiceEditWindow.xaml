<Window x:Class="ManagementHotel.ServiceEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Service" Height="260" Width="380" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Name" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="1" Text="Price" VerticalAlignment="Center"/>
        <TextBox x:Name="txtPrice" Grid.Row="1" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="2" Text="Unit" VerticalAlignment="Center"/>
        <TextBox x:Name="txtUnit" Grid.Row="2" Grid.Column="1" Margin="8,0,0,6"/>

        <StackPanel Grid.Row="3" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="0,0,8,0" Click="Save_Click">Save</Button>
            <Button Width="90" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
