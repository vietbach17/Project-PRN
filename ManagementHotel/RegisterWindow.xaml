<Window x:Class="ManagementHotel.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="360" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical">
            <GroupBox Header="Account">
                <UniformGrid Columns="2" Rows="3" Margin="4">
                    <TextBlock VerticalAlignment="Center">Username</TextBlock>
                    <TextBox x:Name="txtUsername"/>
                    <TextBlock VerticalAlignment="Center">Password</TextBlock>
                    <PasswordBox x:Name="txtPassword"/>
                    <TextBlock VerticalAlignment="Center">Confirm</TextBlock>
                    <PasswordBox x:Name="txtConfirm"/>
                </UniformGrid>
            </GroupBox>
            <GroupBox Header="Customer">
                <UniformGrid Columns="2" Rows="3" Margin="4">
                    <TextBlock VerticalAlignment="Center">Full name</TextBlock>
                    <TextBox x:Name="txtFullName"/>
                    <TextBlock VerticalAlignment="Center">Email</TextBlock>
                    <TextBox x:Name="txtEmail"/>
                    <TextBlock VerticalAlignment="Center">Phone</TextBlock>
                    <TextBox x:Name="txtPhone"/>
                </UniformGrid>
            </GroupBox>
        </StackPanel>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="110" Margin="0,12,8,0" Click="Register_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,6,0"/>
                    <TextBlock Text="Register"/>
                </StackPanel>
            </Button>
            <Button Width="110" Margin="0,12,0,0" Click="Cancel_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Margin="0,0,6,0"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
