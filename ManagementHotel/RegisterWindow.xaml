<Window x:Class="ManagementHotel.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="360" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <GroupBox Header="Account" Margin="0,0,0,12">
            <UniformGrid Columns="2" Rows="8" Margin="4">
                <TextBlock VerticalAlignment="Center" Text="Full Name"/>
                <TextBox x:Name="txtFullName"/>
                <TextBlock VerticalAlignment="Center" Text="Username"/>
                <TextBox x:Name="txtUsername"/>
                <TextBlock VerticalAlignment="Center" Text="Password"/>
                <PasswordBox x:Name="txtPassword"/>
                <TextBlock VerticalAlignment="Center" Text="Confirm Password"/>
                <PasswordBox x:Name="txtConfirm"/>
                <TextBlock VerticalAlignment="Center" Text="Email"/>
                <TextBox x:Name="txtEmail"/>
                <TextBlock VerticalAlignment="Center" Text="Phone"/>
                <TextBox x:Name="txtPhone"/>
                <TextBlock VerticalAlignment="Center" Text="ID Number"/>
                <TextBox x:Name="txtIDNumber"/>
                <TextBlock VerticalAlignment="Center" Text="Address"/>
                <TextBox x:Name="txtAddress"/>
            </UniformGrid>
        </GroupBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="110" Margin="0,12,8,0" Click="Register_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;" Margin="0,0,6,0"/>
                    <TextBlock Text="Register"/>
                </StackPanel>
            </Button>
            <Button Width="110" Margin="0,12,0,0" Click="Cancel_Click">
                <StackPanel Orientation="Horizontal">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Margin="0,0,6,0"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
