<Window x:Class="ManagementHotel.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="My Profile" Height="470" Width="520" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Local palette: Light + Purple accent -->
        <Color x:Key="PF_Border">#FFE5E0F6</Color>
        <Color x:Key="PF_Accent">#FF7C4DFF</Color>
        <SolidColorBrush x:Key="PF_BorderBrush" Color="{StaticResource PF_Border}"/>
        <SolidColorBrush x:Key="PF_AccentBrush" Color="{StaticResource PF_Accent}"/>

        <!-- Buttons: purple pressed/hover -->
        <Style TargetType="Button">
            <Setter Property="Height" Value="32"/>
            <Setter Property="Padding" Value="12,0"/>
            <Setter Property="BorderBrush" Value="{StaticResource PF_BorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource PF_AccentBrush}"/>
                                <Setter Property="Background" Value="#F4F0FF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource PF_AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- GroupBox border subtle -->
        <Style TargetType="GroupBox">
            <Setter Property="BorderBrush" Value="{StaticResource PF_BorderBrush}"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,8,0,0"/>
        </Style>
    </Window.Resources>
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="1" Orientation="Vertical" Margin="0,4,0,0">
            <GroupBox Header="Account">
                <UniformGrid Columns="2" Rows="4" Margin="4">
                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">Username</TextBlock>
                    <TextBox x:Name="txtUsername" Margin="0,4"/>

                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">Current Password</TextBlock>
                    <PasswordBox x:Name="txtCurrentPass" Margin="0,4"/>

                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">New Password</TextBlock>
                    <PasswordBox x:Name="txtNewPass" Margin="0,4"/>

                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">Confirm</TextBlock>
                    <PasswordBox x:Name="txtConfirm" Margin="0,4"/>
                </UniformGrid>
            </GroupBox>

            <GroupBox Header="Customer">
                <UniformGrid Columns="2" Rows="3" Margin="4">
                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">Full name</TextBlock>
                    <TextBox x:Name="txtFullName" Margin="0,4"/>

                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">Email</TextBlock>
                    <TextBox x:Name="txtEmail" Margin="0,4"/>

                    <TextBlock Margin="0,6,8,6" VerticalAlignment="Center">Phone</TextBlock>
                    <TextBox x:Name="txtPhone" Margin="0,4"/>
                </UniformGrid>
            </GroupBox>
        </StackPanel>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="110" Margin="0,12,8,0" Click="Save_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE105;" Margin="0,0,6,0"/>
                    <TextBlock Text="Save"/>
                </StackPanel>
            </Button>
            <Button Width="110" Margin="0,12,0,0" Click="Cancel_Click">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;" Margin="0,0,6,0"/>
                    <TextBlock Text="Cancel"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Grid>
</Window>
