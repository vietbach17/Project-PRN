<Window x:Class="ManagementHotel.BookingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookings" Height="500" Width="900" WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <!-- Local palette (Neutral Dark + Teal) -->
        <Color x:Key="Bkg">#FF1F2326</Color>
        <Color x:Key="Surf">#FF262B2F</Color>
        <Color x:Key="Brd">#FF3A4046</Color>
        <Color x:Key="Fg">#FFEDEFF1</Color>
        <Color x:Key="Accent">#FF20C997</Color>
        <SolidColorBrush x:Key="BkgBrush" Color="{StaticResource Bkg}"/>
        <SolidColorBrush x:Key="SurfBrush" Color="{StaticResource Surf}"/>
        <SolidColorBrush x:Key="BrdBrush" Color="{StaticResource Brd}"/>
        <SolidColorBrush x:Key="FgBrush" Color="{StaticResource Fg}"/>
        <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource Accent}"/>

        <!-- Local styles -->
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="{StaticResource FgBrush}"/>
            <Setter Property="Background" Value="{StaticResource SurfBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrdBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Padding" Value="10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="BorderBrush" Value="{StaticResource AccentBrush}"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="{StaticResource AccentBrush}"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{StaticResource SurfBrush}"/>
            <Setter Property="Foreground" Value="{StaticResource FgBrush}"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrdBrush}"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="AlternatingRowBackground" Value="#1020C997"/>
            <Setter Property="HorizontalGridLinesBrush" Value="#22FFFFFF"/>
            <Setter Property="VerticalGridLinesBrush" Value="#22FFFFFF"/>
            <Setter Property="RowHeight" Value="28"/>
        </Style>
        <Style TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="#FF2B3136"/>
            <Setter Property="Foreground" Value="{StaticResource FgBrush}"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="BorderBrush" Value="{StaticResource BrdBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
        </Style>
        <Style TargetType="DataGridRow">
            <Setter Property="BorderBrush" Value="{StaticResource BrdBrush}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="#3320C997"/>
                    <Setter Property="Foreground" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="8">
            <Button x:Name="btnAdd" Width="90" Margin="0,0,8,0" Click="Add_Click">Add</Button>
            <Button x:Name="btnEdit" Width="90" Margin="0,0,8,0" Click="Edit_Click">Edit</Button>
            <Button x:Name="btnDelete" Width="90" Margin="0,0,8,0" Click="Delete_Click">Delete</Button>
            <Button x:Name="btnRefresh" Width="90" Click="Refresh_Click">Refresh</Button>
            <TextBlock Margin="16,0,8,0" VerticalAlignment="Center">Status</TextBlock>
            <ComboBox x:Name="cbStatusFilter" Width="150" SelectionChanged="StatusFilter_Changed">
                <ComboBoxItem Content="All" IsSelected="True"/>
                <ComboBoxItem Content="Pending"/>
                <ComboBoxItem Content="Confirmed"/>
                <ComboBoxItem Content="Cancelled"/>
            </ComboBox>
        </StackPanel>
        <DataGrid x:Name="dg" AutoGenerateColumns="False" IsReadOnly="True" Margin="8">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Booking #" Binding="{Binding BookingId}" Width="*"/>
                <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="2*"/>
                <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="*"/>
                <DataGridTextColumn Header="Check In" Binding="{Binding CheckInDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Check Out" Binding="{Binding CheckOutDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
