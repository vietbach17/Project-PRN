<Window x:Class="ManagementHotel.BookingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bookings" Height="520" Width="920" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <TextBlock Text="Bookings" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock FontSize="12" Foreground="{StaticResource ForegroundDimBrush}" Text="Signed in as:"/>
                <TextBlock x:Name="txtCurrentUser" FontWeight="SemiBold" Margin="4,0,0,0"/>
            </StackPanel>
        </Grid>

        <DockPanel Grid.Row="1" Margin="0,16,0,12">
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                <Button x:Name="btnAdd" Width="100" Click="Add_Click" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE710;"/>
                        <TextBlock Text="Add" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnEdit" Width="100" Click="Edit_Click" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE70F;"/>
                        <TextBlock Text="Edit" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnDelete" Width="100" Click="Delete_Click" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE74D;"/>
                        <TextBlock Text="Delete" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button x:Name="btnRefresh" Width="100" Click="Refresh_Click" Margin="0,0,8,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE72C;"/>
                        <TextBlock Text="Refresh" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>
                <Button Width="100" Click="Close_Click">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE711;"/>
                        <TextBlock Text="Close" Margin="6,0,0,0"/>
                    </StackPanel>
                </Button>
            </StackPanel>
            <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" VerticalAlignment="Center">
                <TextBlock VerticalAlignment="Center" Text="Status"/>
                <ComboBox x:Name="cbStatusFilter" Width="160" Margin="8,0,0,0" SelectionChanged="StatusFilter_Changed">
                    <ComboBoxItem Content="All" IsSelected="True"/>
                    <ComboBoxItem Content="Reserved"/>
                    <ComboBoxItem Content="CheckedIn"/>
                    <ComboBoxItem Content="CheckedOut"/>
                    <ComboBoxItem Content="Cancelled"/>
                </ComboBox>
            </StackPanel>
        </DockPanel>

        <Border Grid.Row="2" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8">
            <DataGrid x:Name="dg" AutoGenerateColumns="False" IsReadOnly="True" Margin="12" RowHeaderWidth="0">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Booking #" Binding="{Binding BookingId}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Customer" Binding="{Binding CustomerName}" Width="2*"/>
                    <DataGridTextColumn Header="Room" Binding="{Binding RoomNumber}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Check In" Binding="{Binding CheckInDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Check Out" Binding="{Binding CheckOutDate, StringFormat={}{0:dd/MM/yyyy}}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding TotalDue, StringFormat={}{0:N0} ₫}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Paid" Binding="{Binding AmountPaid, StringFormat={}{0:N0} ₫}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                    <DataGridTextColumn Header="Balance" Binding="{Binding Balance, StringFormat={}{0:N0} ₫}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
        <Border Grid.Row="3" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="8" Margin="0,12,0,0" Padding="12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="2*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="{Binding SelectedItem.CheckInDate, ElementName=dg, StringFormat=Check-in: {0:dd/MM/yyyy}}"/>
                <TextBlock Grid.Column="1" Text="{Binding SelectedItem.CheckOutDate, ElementName=dg, StringFormat=Check-out: {0:dd/MM/yyyy}}"/>
                <TextBlock Grid.Column="2" Text="{Binding SelectedItem.TotalDue, ElementName=dg, StringFormat=Total: {0:N0} ₫}"/>
                <TextBlock Grid.Column="3" Text="{Binding SelectedItem.AmountPaid, ElementName=dg, StringFormat=Paid: {0:N0} ₫}"/>
            </Grid>
        </Border>
    </Grid>
</Window>
