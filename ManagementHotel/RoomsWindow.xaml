<Window x:Class="ManagementHotel.RoomsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Rooms" Height="450" Width="800" WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="8">
            <Button x:Name="btnAdd" Width="90" Margin="0,0,8,0" Click="Add_Click">Add</Button>
            <Button x:Name="btnEdit" Width="90" Margin="0,0,8,0" Click="Edit_Click">Edit</Button>
            <Button x:Name="btnDelete" Width="90" Margin="0,0,8,0" Click="Delete_Click">Delete</Button>
            <Button x:Name="btnRefresh" Width="90" Click="Refresh_Click">Refresh</Button>
            <TextBlock Margin="12,0,0,0" VerticalAlignment="Center" Text="Rooms" FontWeight="Bold" />
        </StackPanel>
        <DataGrid x:Name="dgRooms" AutoGenerateColumns="False" Margin="8" IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Room #" Binding="{Binding RoomNumber}" Width="*"/>
                <DataGridTextColumn Header="Floor" Binding="{Binding Floor}" Width="*"/>
                <DataGridTextColumn Header="Type" Binding="{Binding RoomType.Name}" Width="2*"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="*"/>
                <DataGridTextColumn Header="Price/Night" Binding="{Binding PricePerNight, StringFormat={}{0:N0} â‚«}" Width="*" ElementStyle="{StaticResource RightAlignText}"/>
                <DataGridTextColumn Header="Current Customer" Binding="{Binding CurrentCustomerName}" Width="2*"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
