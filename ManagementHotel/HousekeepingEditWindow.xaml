<Window x:Class="ManagementHotel.HousekeepingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Housekeeping Task" Height="300" Width="420" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Room" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbRoom" Grid.Column="1" Margin="8,0,0,6" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId"/>

        <TextBlock Grid.Row="1" Text="Task Date" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpDate" Grid.Row="1" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="2" Text="Staff Name" VerticalAlignment="Center"/>
        <TextBox x:Name="txtStaff" Grid.Row="2" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="3" Text="Status" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbStatus" Grid.Row="3" Grid.Column="1" Margin="8,0,0,6">
            <ComboBoxItem Content="Pending"/>
            <ComboBoxItem Content="InProgress"/>
            <ComboBoxItem Content="Done"/>
        </ComboBox>

        <StackPanel Grid.Row="4" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="0,0,8,0" Click="Save_Click">Save</Button>
            <Button Width="90" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
