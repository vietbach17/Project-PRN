<Window x:Class="ManagementHotel.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Change Password" Height="280" Width="380" WindowStartupLocation="CenterOwner">
    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <UniformGrid Columns="2" Rows="3" HorizontalAlignment="Center" VerticalAlignment="Center" Width="320">
            <TextBlock VerticalAlignment="Center" Text="Username"/>
            <TextBox x:Name="txtUsername" Margin="0,0,0,8"/>
            <TextBlock VerticalAlignment="Center" Text="Current Password"/>
            <PasswordBox x:Name="txtCurrent" Margin="0,0,0,8"/>
            <TextBlock VerticalAlignment="Center" Text="New Password"/>
            <PasswordBox x:Name="txtNew" Margin="0,0,0,8"/>
        </UniformGrid>
        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button Width="90" Margin="0,0,8,0" Click="Submit_Click">Submit</Button>
            <Button Width="90" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
