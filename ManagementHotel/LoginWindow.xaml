<Window x:Class="ManagementHotel.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="380" Width="400" WindowStartupLocation="CenterScreen">
    <Border Background="{StaticResource SurfaceBrush}" BorderBrush="{StaticResource BorderBrush}" BorderThickness="1" CornerRadius="12" Margin="10,20,20,20" Padding="24" >
        <Grid Margin="14,0,-14,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="59*"/>
                <ColumnDefinition Width="76*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" MinHeight="145.1"/>
                <RowDefinition Height="Auto" MinHeight="56"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Margin="0,0,0,12" Grid.ColumnSpan="2">
                <TextBlock Text="Login" FontSize="18" FontWeight="SemiBold"/>
                <StackPanel>
                    <TextBlock Text="Username"/>
                    <TextBox x:Name="txtUser" Width="240" Margin="0,4,0,0"/>
                </StackPanel>
                <StackPanel Margin="0,12,0,0">
                    <TextBlock Text="Password"/>
                    <PasswordBox x:Name="txtPass" Width="240" Margin="0,4,0,0"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,24,0,0" Grid.ColumnSpan="2" Width="294">
                <Button Width="75" Margin="0,0,8,0" Click="Register_Click">Register</Button>
                <Button Width="90" Margin="0,0,8,0" Click="Login_Click" Background="{StaticResource AccentBrush}" Foreground="White">Login</Button>
                <Button Width="90" Click="Cancel_Click">Cancel</Button>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Left" Margin="27,20,0,0" Width="103">
                <TextBlock Height="19" Width="103" RenderTransformOrigin="0.499,0.439">
                    <TextBlock.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform/>
                            <RotateTransform Angle="0.379"/>
                            <TranslateTransform X="0.01" Y="0.001"/>
                        </TransformGroup>
                    </TextBlock.RenderTransform><Hyperlink Click="ChangePassword_Click"><Run Text="Change password"/></Hyperlink></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>
