<Window x:Class="ManagementHotel.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking" Height="340" Width="460" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Customer" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbCustomer" Grid.Column="1" Margin="8,0,0,6" DisplayMemberPath="FullName" SelectedValuePath="CustomerId"/>

        <TextBlock Grid.Row="1" Text="Room" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbRoom" Grid.Row="1" Grid.Column="1" Margin="8,0,0,6" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId"/>

        <TextBlock Grid.Row="2" Text="Check-in" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpCheckIn" Grid.Row="2" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="3" Text="Check-out" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpCheckOut" Grid.Row="3" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="4" Text="Status" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbStatus" Grid.Row="4" Grid.Column="1" Margin="8,0,0,6">
            <ComboBoxItem Content="Pending"/>
            <ComboBoxItem Content="Confirmed"/>
            <ComboBoxItem Content="Canceled"/>
        </ComboBox>

        <TextBlock Grid.Row="5" Text="Notes" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNotes" Grid.Row="5" Grid.Column="1" Margin="8,0,0,6"/>

        <StackPanel Grid.Row="6" Grid.ColumnSpan="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="90" Margin="0,0,8,0" Click="Save_Click">Save</Button>
            <Button Width="90" Click="Cancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
