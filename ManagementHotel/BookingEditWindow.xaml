<Window x:Class="ManagementHotel.BookingEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Booking" Height="420" Width="460" WindowStartupLocation="CenterOwner">
    <Grid Margin="12">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Customer" VerticalAlignment="Center"/>
        <TextBox x:Name="txtCustomer" Grid.Column="1" Margin="8,0,0,6" IsReadOnly="True"/>
        <Button x:Name="btnSelectCustomer" Grid.Column="2" Width="90" Margin="8,0,0,6" Click="SelectCustomer_Click">
            <StackPanel Orientation="Horizontal">
                <TextBlock FontFamily="Segoe MDL2 Assets" Text="&#xE8B2;"/>
                <TextBlock Text="Select" Margin="6,0,0,0"/>
            </StackPanel>
        </Button>

        <TextBlock Grid.Row="1" Text="Room" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbRoom" Grid.Row="1" Grid.Column="1" Margin="8,0,0,6" DisplayMemberPath="RoomNumber" SelectedValuePath="RoomId" SelectionChanged="Room_SelectionChanged"/>

        <TextBlock Grid.Row="2" Text="Check-in" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpCheckIn" Grid.Row="2" Grid.Column="1" Margin="8,0,0,6" SelectedDateChanged="Date_SelectedDateChanged"/>

        <TextBlock Grid.Row="3" Text="Check-out" VerticalAlignment="Center"/>
        <DatePicker x:Name="dpCheckOut" Grid.Row="3" Grid.Column="1" Margin="8,0,0,6" SelectedDateChanged="Date_SelectedDateChanged"/>

        <TextBlock Grid.Row="4" Text="Status" VerticalAlignment="Center"/>
        <ComboBox x:Name="cbStatus" Grid.Row="4" Grid.Column="1" Margin="8,0,0,6">
            <ComboBoxItem Content="Reserved"/>
            <ComboBoxItem Content="CheckedIn"/>
            <ComboBoxItem Content="CheckedOut"/>
            <ComboBoxItem Content="Cancelled"/>
        </ComboBox>

        <TextBlock Grid.Row="6" Text="Notes" VerticalAlignment="Center"/>
        <TextBox x:Name="txtNotes" Grid.Row="6" Grid.Column="1" Margin="8,0,0,6"/>

        <TextBlock Grid.Row="7" Text="Tổng tiền" VerticalAlignment="Center"/>
        <TextBox x:Name="txtTotal" Grid.Row="7" Grid.Column="1" Margin="8,0,0,6" IsReadOnly="True"/>

        <StackPanel Grid.Row="8" Grid.ColumnSpan="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,12,0,0">
            <Button Width="120" Margin="0,0,8,0" Click="Save_Click">Xác nhận đặt phòng</Button>
            <Button Width="90" Click="Cancel_Click">Hủy</Button>
        </StackPanel>
    </Grid>
</Window>
